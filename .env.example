# GameMind Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# Application
NODE_ENV=development
PUBLIC_APP_URL=http://localhost:5173
PUBLIC_APP_NAME=GameMind

# Backend API
VITE_API_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/gamemind
REDIS_URL=redis://localhost:6379
TIMESCALE_URL=postgresql://user:password@localhost:5432/gamemind_timescale

# Authentication (Future)
JWT_SECRET=your-super-secret-jwt-key-change-this
SESSION_SECRET=your-super-secret-session-key-change-this

# Email (Future)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@gamemind.com

# Payment (Future - Stripe)
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Analytics (Future)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=your_mixpanel_token

# AI/ML (Future)
OPENAI_API_KEY=sk-your-openai-api-key
AI_MODEL_URL=https://models.gamemind.com

# Storage (Future)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-west-2
S3_BUCKET=gamemind-assets

# Monitoring (Future)
SENTRY_DSN=https://your-sentry-dsn
LOG_LEVEL=info

# Feature Flags
ENABLE_MAHJONG=false
ENABLE_GO=false
ENABLE_TOURNAMENTS=false
ENABLE_VR=false

